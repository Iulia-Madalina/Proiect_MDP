@page "/{id:int?}"
@model Proiect_MDP.Pages.Flowers.IndexModel

@{
    ViewData["Title"] = "Flowers";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flower[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flower[0].Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flower[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flower[0].MaturingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flower[0].Seller.SellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flower[0].FlowerCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FlowerD.Flowers) {
    string selectedRow = "";
    if (item.ID == Model.FlowerID)
    {
        selectedRow = "table-success";
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaturingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seller.SellerName)
            </td>
            <td>
                @{
                    foreach (var category in item.FlowerCategories)
                    {
                        @category.Category.ID @: @category.Category.CategoryName <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
